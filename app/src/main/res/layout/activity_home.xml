<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1434"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="418dp"
        android:layout_height="44dp"
        android:text="@string/tic_tac_toe_game"
        android:textAlignment="center"
        android:textColor="#EA0F0A"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/restartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:onClick="restartGame"
        android:text="@string/restart_game"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/winnerNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/winnerTextView"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/chanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/winnerNumberTextView"
        app:layout_constraintVertical_bias="0.025" />
    <TextView
        android:id="@+id/DrawnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chanceTextView"
        app:layout_constraintVertical_bias="0.025" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="0dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn1"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn4"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn7"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_marginStart="11dp"
                android:onClick="Implementation"
                android:layout_marginLeft="11dp" />
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
